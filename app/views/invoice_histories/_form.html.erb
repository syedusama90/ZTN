<%= stylesheet_link_tag 'application'%>
<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card  text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <div class="mb-md-5 mt-md-4 pb-5">
<%= form_with(model: invoice_history) do |form| %>
  <% if invoice_history.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(invoice_history.errors.count, "error") %> prohibited this invoice_history from being saved:</h2>

      <ul>
        <% invoice_history.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :invoiceMonth ,class: "form-control form-control-sm" , placeholder:"Invoice Month" %>
  </div>

  <div class="field">
    <%= form.text_field :invoiveNumber,class: "form-control form-control-sm" , placeholder:"Invoive Number" %>
  </div>

  <div class="field">
    <%= form.text_field :invoiceAmount,class: "form-control form-control-sm" , placeholder:"InvoiceAmount" %>
  </div>

  <div class="field">
    <%= form.text_field :Paid,class: "form-control form-control-sm" , placeholder: "Paid"%>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-outline-light btn-lg px-5" %>
  </div>
<% end %>
